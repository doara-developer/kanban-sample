{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "lib": ["es2018", "dom"],
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": "src",
        "typeRoots": [
            "node_modules/@types",
        ],
        "paths": {
            "@client/*": ["./client/*"],
            "@server/*": ["./server/*"],
            "@common/*": ["./common/*"],
        },
        "moduleResolution": "node",
        "types": ["jest"],
    },
    "include": [
        "src/**/*",
        "__test__/**/*.ts",
    ]
}
